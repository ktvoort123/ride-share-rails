<h2 class='edit-details'>Edit This Passenger's Details</h2>

<% if @passenger.errors.any? %>
  <ul class='errors'>
  <% @passenger.errors.each do |column, message| %>
    <li>
      <strong><%= column.upcase %></strong> <%= message %>
    </li>
  <% end %>
  </ul>
<% end %>

<section class = 'form'>
  <%= form_with model: @passenger, class: 'passenger-form' do |f| %> 
  <section>
    <%= f.label :name %>
    <%= f.text_field :name %> 
  </section>

  <section>
    <%= f.label :phone_num %>
    <%= f.text_field :phone_num %>
  </section>

  <%= f.submit "Update Passenger", class: "passenger-button" %>
  <% end %>
</section>