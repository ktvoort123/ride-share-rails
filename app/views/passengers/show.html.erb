<h1>Passenger Show Page</h1>

<p>Name: <%=@passenger.name%></p>
<p>Phone Number: <%=@passenger.phone_num%></p>

  <% @passenger.trips.each do |trip|  %>
    <li>
      <p>ID: <%=trip.id%></p>
      <p>Date: <%=trip.date%></p>
      <p>Rating: <%=trip.rating%></p>
      <p>Cost: <%=trip.cost%></p>
      <p>Passenger: <%=trip.passenger.name%></p> 
      <p>Driver: <%=trip.driver.name%></p>
    </li> 
  <% end %>

<%= link_to "edit", edit_passenger_path(@passenger.id)%>
<%= link_to "delete", passenger_path(@passenger.id), method: :delete%>